#include <stdio.h>

void input(int a[], int n)
{
    int i;
    for (i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
}

void countEven(int a[], int n)
{
    int i;
    int count = 0;
    for (i = 0; i < n; i++)
    {
        if (a[i] % 2 == 0)
        {
            count++;
        }
    }
    printf("%d", count);
}

int main()
{
    int n;
    scanf("%d", &n);
    int a[n + 5];
    input(a, n);
    countEven(a, n);
    return 0;
}
