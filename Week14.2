#include <stdio.h>

typedef struct Thoitiet
{
    float TotalRainfall;
    float HighTemperature;
    float LowTemperature;
    float AverageTemperature;
} weather;

void nhap(weather a[])
{
    int i = 0;
    while (i < 12)
    {
        printf("Nhap vao thang %d\n", i + 1);
        printf("Nhap vao tong luong mua: ");
        fflush(stdin);
        scanf("%f", &a[i].TotalRainfall);
        printf("Nhap nhiet do cao: ");
        fflush(stdin);
        scanf("%f", &a[i].HighTemperature);
        printf("Nhap nhiet do thap: ");
        fflush(stdin);
        scanf("%f", &a[i].LowTemperature);
        a[i].AverageTemperature = (a[i].HighTemperature + a[i].LowTemperature) / 2;
        if (a[i].HighTemperature >= -40 && a[i].HighTemperature <= 50 && a[i].LowTemperature >= -40 && a[i].LowTemperature <= 50)
        {
            i++;
        }
        else
        {
            printf("Ban da nhap sai!\n");
            printf("Vui long nhap lai!\n");
            continue;
        }
    }
}

void sumTotalRainfall(weather a[])
{
    int i;
    double sum = 0;
    for (i = 0; i < 12; i++)
    {
        sum = sum + a[i].TotalRainfall;
    }
    printf("Tong luong mua trong nam la: %lf\n", sum);
    printf("Luong mua trung binh mot nam la: %f\n", (float)sum / 12);
}

void Temperature(weather a[])
{
    double max = 0;
    double min = a[0].LowTemperature;
    int i;
    for (i = 0; i < 12; i++)
    {
        if (a[i].HighTemperature > max)
        {
            max = a[i].HighTemperature;
        }
    }
    int j;
    for (j = 0; j < 12; j++)
    {
        if (a[j].LowTemperature < min)
        {
            min = a[j].LowTemperature;
        }
    }
    printf("Nhiet do cao nhat trong nam la: %lf\n", max);
    printf("Nhiet do thap nhat trong nam la: %lf\n", min);
}

int main()
{
    weather a[12];
    nhap(a);
    sumTotalRainfall(a);
    Temperature(a);
    return 0;
}
